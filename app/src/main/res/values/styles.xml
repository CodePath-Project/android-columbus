<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">

    </style>

    <style name="MyCustomTheme" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyTheme.ActionBar.TabView</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_light</item>
    </style>

    <!-- Theme without ActionBar shadow (inherits main theme) -->
    <style name="TransparentActionBarTheme" parent="MyCustomTheme">
      <item name="android:actionBarStyle">@style/TransparentActionBarTheme.ActionBar</item>
      <item name="actionBarStyle">@style/TransparentActionBarTheme.ActionBar</item>
      <item name="windowContentOverlay">@null</item>
      <item name="android:windowContentOverlay">@null</item>
      <item name="android:windowActionBarOverlay">true</item>
      <item name="windowActionBarOverlay">true</item>
      <item name="android:homeAsUpIndicator">@drawable/abs__ic_ab_back_holo_dark</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="TransparentActionBarTheme.ActionBar" parent="@style/Widget.Sherlock.ActionBar">
      <item name="android:background">@drawable/exhibit_actionbar_bg</item>
      <item name="background">@drawable/exhibit_actionbar_bg</item>
    </style>

    <style name="MyTheme.ActionBar.TabView" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="CustomTabPageIndicator"  parent="Widget.TabPageIndicator">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/pink_orange</item>
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="ShadowText">
        <item name="fontPath">fonts/CircularStd-Bold.otf</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#333</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="ShadowText.Large" parent="ShadowText">
        <item name="android:textSize">40sp</item>
    </style>

    <color name="actionbar_title_color">#423d3d</color>

    <style name="TransparentActionBarTheme.HeaderTitle">
      <item name="fontPath">fonts/CircularStd-Bold.otf</item>
      <item name="android:textColor">#ffffffff</item>
      <item name="android:textSize">20sp</item>
      <item name="android:shadowColor">#ccc</item>
      <item name="android:shadowDy">1</item>
      <item name="android:shadowRadius">3</item>

    </style>

</resources>
