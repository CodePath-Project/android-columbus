<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/polar_bear"
    tools:context="com.codepath.columbus.columbus.fragments.exhibit.ExhibitCommentsFragment">

  <ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lvComments"
    android:background="@color/polar_bear"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"/>

  <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:padding="20dp"
    android:id="@+id/flEmptyCommments"
    android:layout_alignParentTop="true">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/MyCustomTheme.TextAppearance.Large.Circular"
      android:text="@string/comments_empty_default_text"
      android:gravity="center"
      android:id="@+id/tvEmptyComments"
      android:layout_gravity="center"/>
  </FrameLayout>
</RelativeLayout>
