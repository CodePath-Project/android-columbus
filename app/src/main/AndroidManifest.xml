<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.columbus.columbus" >

    <uses-permission android:name="com.codepath.columbus.columbus.permission.MAPS_RECEIVE" />

    <permission android:name="com.codepath.columbus.columbus.permission.MAPS_RECEIVE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Needed permissions in order to scan for beacons. -->
     <uses-permission android:name="android.permission.BLUETOOTH"/>
     <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />


     <!-- Declaration that this app is usable on phones with Bluetooth Low Energy. -->
     <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>
 
    <application
        android:name="com.codepath.columbus.columbus.ColumbusApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_hollow"
        android:label="@string/app_name"
        android:theme="@style/MyCustomTheme" >

      <service android:name="com.codepath.columbus.columbus.services.MusicService" />

        <activity
            android:name="com.codepath.columbus.columbus.activities.ExhibitActivity"
            android:label=""
            android:theme="@style/TransparentActionBarTheme">

        </activity>
        <activity
            android:name="com.codepath.columbus.columbus.activities.ExhibitListActivity"
            android:label="@string/title_activity_exhibit_list" >
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label=""
            android:theme="@style/TransparentActionBarTheme" >
        </activity>
        <activity
            android:name=".activities.MuseumActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.codepath.columbus.columbus.activities.ExhibitCreateCommentActivity"
            android:label="@string/title_activity_exhibit_create_comment"
            android:windowSoftInputMode="stateVisible">
        </activity>

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAe7RaLA6qp-nDLVyJuNV6XULDUD7kEjWk" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Estimote service responsible for scanning beacons. -->
         <service android:name="com.estimote.sdk.service.BeaconService"
             android:process=":remote"
             android:exported="false"/>
         <service android:name="com.codepath.columbus.columbus.services.MusicService" />
    </application>

</manifest>
